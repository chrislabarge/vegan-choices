= render 'shared/header', title: 'Sign In'
.ui.container.contacts
  = devise_error_messages!
  .ui.middle.aligned.center.aligned.grid.page-content
    .row
      .sixteen.wide.mobile.fourteen.wide.tablet.column.signup-form
        = form_for(resource, as: resource_name,
                             url: session_path(resource_name),
                             html: { class: 'ui form large' }) do |f|
          .field
            = f.label :email
            .ui.left.icon.input
              %i.user.icon
              = f.email_field :email, autofocus: true, placeholder: 'Email'
          .field
            = f.label :password
            = f.password_field :password, autocomplete: "off", placeholder: 'Password'
          - if devise_mapping.rememberable?
            .inline.field
              .ui.toggle.checkbox
                = f.check_box :remember_me
                = f.label :remember_me
          .actions
          = f.submit "Log in", class: 'ui circular button blue'
= render "devise/shared/links"
