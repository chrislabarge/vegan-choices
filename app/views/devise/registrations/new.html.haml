= render 'shared/header', title: 'Sign Up'
-# .ui.vertical.stripe.segment.header-above
-#   .ui.text.container.center.aligned
-#     %p
-#       This is where you talk about what features are included.
.ui.container.contacts
  = devise_error_messages!
  .ui.middle.aligned.center.aligned.grid.page-content
    .row
      .sixteen.wide.mobile.fourteen.wide.tablet.column.signup-form
        = form_for(resource, as: resource_name,
                             url: registration_path(resource_name),
                             html: { class: 'ui form large' }) do |f|
          .ui.segment.raised
            %h3.ui.header
              Please Fill Out Form
            .field
              = f.label :email
              .ui.large.input
                = f.email_field :email, required: true, placeholder: 'Email'
            .field
              = f.label :password, "Password <span>#{@minimum_password_length} characters minimum</span>".html_safe
              .ui.large.input
                = f.password_field :password, required: true, autocomplete: "off", placeholder: 'Password'
            .field
              = f.label :password_confirmation, 'Confirm Password'
              .ui.large.input
                = f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: 'Confirm Password'
            -# .ui.error.message

            = f.submit 'Sign up', class: 'ui circular button blue'
            %br
        Already have an account?
        = render "devise/shared/links"
