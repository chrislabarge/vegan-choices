- close_name ||= 'Close'
- title ||= nil
.header
  %span
    = header
  %a.close{class: 'pointer', role: 'button'}
    x
.ui.container
  - if title
    .sub-header
      %h2.title
        = title
  .content.item-ingredients
    = content
.footer
  %a.ui.button.circular.purple.big.close
    %i.remove.icon
    = close_name
