%a.item{:href => "#{restaurant_path(model)}"}
  .content
    .ui.grid.middle.aligned
      .eight.wide.mobile.column
        %h3.ui.header
          = image_tag(image_path(model), height: '60', width:'60', class: 'ui image middle aligned')
          = model.name.titleize
      .eight.wide.mobile.column.right.aligned.item-count
        - count = model.items.count
        %h4
          %span.highlight
            = count
          %strong
            = 'Option'.pluralize(count)
