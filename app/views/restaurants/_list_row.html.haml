%a.item{:href => "#{restaurant_path(model)}"}
  .content.list-row
    .ui.grid.middle.aligned
      .eleven.wide.mobile.column
        %h3.ui.header.row-title
          = image_tag((model.thumbnail || image_path(model)), height: '60', width:'60', class: 'ui image middle aligned')
          = model.name
      .five.wide.mobile.column.right.aligned.item-count
        %h4
          - if model.vegan_menu.present?
            %span.highlight
              Vegan Menu
          - else
            - count = model.items.count
            %span.highlight
              = count
            %strong
              = 'Option'.pluralize(count)
