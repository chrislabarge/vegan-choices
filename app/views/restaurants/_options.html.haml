  %a.disabled{href: '#', style: 'poniter-events:none;' }
    %strong.ui.icon.header.disabled
      %i.circular.print.icon
      Print
      %br
      List
  %a{href: locations_url(@model)}
    %strong.ui.icon.header
      %i.circular.food.icon
      Locations Nearby
  %a{href: @model.website }
    %strong.ui.icon.header
      %i.circular.external.icon
      Restaurant Website
  %span.favorite
    -if @favorite.persisted?
      = render 'favorites/remove', favorite_resource: @favorite, resource: :restaurant, resource_id: @model.id
    - else
      = render 'favorites/new', favorite_resource: @favorite, resource: :restaurant, resource_id: @model.id
  %a{href: report_restaurant_path(@model) }
    %strong.ui.icon.header
      %i.circular.external.icon
      Report Restaurant
