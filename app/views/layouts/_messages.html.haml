.ui.container
  - flash.each do |key, value|
    %div{class: "#{flash_class(key)} close"}
      %i.close.icon
      = value
      - if key == 'error'
        - @model.errors.messages.each do |attr, messages|
          - if messages.present?
            %ul
              - messages.each do |msg|
                %li
                  = "#{attr.to_s.titleize} #{msg}"
