.ui.container
  .ui.huge.secondary.menu
    %a.toc.item.launch
      %i.sidebar.icon
    .header.item
      = link_to @app_name, root_url, class: 'custom'
    = render 'shared/navigation_items'
    .right.item
      = render 'shared/search', id: 'searchNav', form_id: 'headerSearch'
    %span.ui.dropdown.right.item.user
      %i.user.circle.outline.icon
      .menu
        - if current_user
          = link_to user_path(current_user), class: 'item' do
            %i.user.blue.icon
            Profile
          = link_to edit_user_path(current_user), class: 'item' do
            %i.write.blue.icon
            Edit Profile
          = link_to destroy_user_session_path, method: :delete, class: 'item' do
            %i.sign.out.blue.icon
            Sign Out
        - else
          = link_to new_user_registration_path, class: 'item' do
            %i.add.user.blue.icon
            Sign Up
          = link_to new_user_session_path, class: 'item' do
            %i.sign.out.blue.icon
            Log In
