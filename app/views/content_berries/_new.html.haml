= form_for(content_berry, remote: true, html: {id: "new_#{resource_name}_berry_#{resource_id}", class: 'hidden'}) do |f|
  = f.hidden_field "#{resource_name}_id".to_sym, value: resource_id
  = f.submit '#', class: 'hidden'
%a{ href: 'javascript:void(0)', class: 'submit', onclick: 'submitForm(this)'}
  %strong.ui.icon.header
    %span.icon
      = image_tag('default/berry-green.svg')
    %span.content
      Give Berry
