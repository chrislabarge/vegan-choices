= render 'shared/header', title: @title
.ui.container
  .ui.middle.aligned.center.aligned.grid.page-content
    .row
      = render 'shared/form_wrapper', resource: @model, title: 'Food/Beverage Form' do |f|
        - render 'form', f: f, submit_title: 'Update Vegan Option'
    .row
      .ui.container.centered
        %span.delete-item.bottm.aligned
          = render 'shared/delete_toggle', path: item_path(@model), data_content: 'Delete the vegan option'
